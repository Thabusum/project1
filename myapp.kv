FloatLayout:
    Image:
        source: 'background.jpg'
        allow_stretch: True
        keep_ratio: False

    Button:
        id: play_button
        text: 'Off'
        size_hint: None, None
        size: 200, 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_press: app.toggle_sound()
